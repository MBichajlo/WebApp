<%- include("partials/header.ejs") %>
    <main>
        <div class="myContainer">

            <div class="sidebar">
                <ul class="posts-list">
                    <% if (locals.posts){posts.forEach(element=> { %>
                        <li><a href="/post?<%= element %>">
                                <%= element %>
                            </a></li>
                        <% })} %>
                </ul>
            </div>
            <% randomPosts.forEach(element=> { %>
                <% if (element) { %>
                    <div class="card post number1">
                        <h3 class="card-title m-3">
                            <%=element.name%>
                        </h3>
                        <div class="card-body">
                            <p>
                                <%=element.data%>
                            </p>
                        </div>
                        <a class="btn mb-3 " href="/post?<%= element.name%>">Read full post</a>
                    </div>
                    <% } %>
                        <% }) %>

        </div>
    </main>
    <%- include("partials/footer.ejs") %>